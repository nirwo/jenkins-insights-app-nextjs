# Example environment configuration for Jenkins Insights App
# Copy this file to .env.local for local development

# Next.js Environment
NODE_ENV=development

# App Configuration
NEXT_PUBLIC_APP_NAME=Jenkins Insights
NEXT_PUBLIC_APP_VERSION=1.1.0

# Optional Analytics (if you want to add analytics)
# NEXT_PUBLIC_ANALYTICS_ID=

# Deployment Environment
# Set to 'development', 'staging', or 'production'
NEXT_PUBLIC_DEPLOYMENT_ENV=development

# Default Jenkins information (optional)
# NEXT_PUBLIC_DEFAULT_JENKINS_URL=https://jenkins.example.com
# NEXT_PUBLIC_DEFAULT_JENKINS_NAME=My Jenkins Server

# Feature Flags
NEXT_PUBLIC_ENABLE_ISSUE_ANALYSIS=true
NEXT_PUBLIC_ENABLE_CONSOLE_ANALYSIS=true

# Cache Settings (milliseconds)
NEXT_PUBLIC_CACHE_DURATION=30000 # 30 seconds